<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--引入外部的properties文件-->
    <properties resource="jdbc.properties" />
    <!--设置别名 方式一：单个配置-->
   <!-- <typeAliases>
        <typeAlias type="com.itheima.bean.User" alias="User"></typeAlias>
    </typeAliases>-->
    <!--设置别名 方式二：批量配置   name这里写的是包名所以用.-->
    <typeAliases>
        <package name="com.itheima.bean"/>
    </typeAliases>

    <!--配置数据库连接信息-->
    <environments default="development">
        <environment id="development">
            <!-- 事务管理：表示使用JDBC事务管理 -->
            <transactionManager type="JDBC"/>
            <!--MyBatis连接池：表示使用MyBatis默认的连接池-->
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
    <!--配置映射文件  方式一：单个配置 使用目录引入-->
    <!--<mappers>
        <mapper resource="com/itheima/dao/Userdao .xml"/>
    </mappers>-->

    <!--配置映射文件  方式二：单个的配置  通过dao接口名称查找-->
    <!--<mappers>
        <mapper class="com.itheima.dao.UserDao"></mapper>
    </mappers>-->
    <!--配置映射文件  方式二：批量配置  通过包名进行扫描
        注意：①映射文件和dao接口要在同一级目录  ②dao接口类名要和映射文件名称保持一致
     -->
    <mappers>
        <package name="com.itheima.dao"/>
    </mappers>

</configuration>